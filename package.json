{
  "name": "cloudnet-panel",
  "version": "1.0.0",
  "description": "A modern web panel for CloudNet server management",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently \"npm run server-start\" \"npm run client-start\"",
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "server-dev": "cd server && npm run dev",
    "client-dev": "cd client && npm run dev",
    "client-start": "cd client && npm start",
    "server-start": "cd server && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install",
    "create-admin": "cd server && npm run create-admin",
    "generate-secret": "node scripts/generate-jwt-secret.js",
    "health-check": "node scripts/health-check.js",
    "backup": "node scripts/backup.js",
    "migrate": "python scripts/migrate.py",
    "docker:build": "docker build -t cloudnet-panel:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "cloudnet",
    "panel",
    "server-management",
    "gaming"
  ],
  "authors": [
    "PerrierBottle",
    "PopoGH"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "wscat": "^6.1.0"
  }
}