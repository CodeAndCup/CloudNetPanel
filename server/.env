# CloudNet Panel Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# CloudNet REST API Configuration
# Set to 'true' to enable CloudNet API integration, 'false' to use mock data
CLOUDNET_API_ENABLED=false

# CloudNet REST API URL (default CloudNet REST API port is usually 2812)
CLOUDNET_API_URL=http://localhost:2812/api/v3

# CloudNet REST API Authentication
CLOUDNET_API_USERNAME=administrator
CLOUDNET_API_PASSWORD=administrator

# CloudNet API Request Settings
CLOUDNET_API_TIMEOUT=5000
CLOUDNET_API_RETRIES=3
CLOUDNET_API_RETRY_DELAY=1000

# CloudNet Server Configuration
# CloudNet Server Path (for creating templates and tasks)
CLOUDNET_SERVER_PATH=/home/cloudnet/CloudNet-Server

# CloudNet Proxy Group Configuration
# This is the group that will be used for proxy servers
CLOUDNET_SERVER_PROXY_GROUP=Global-Proxy

# Database Configuration (SQLite)
DB_PATH=./database/cloudnet_panel.db
