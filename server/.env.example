# CloudNet Panel Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# CloudNet REST API Configuration
# Set to 'true' to enable CloudNet API integration, 'false' to use mock data
CLOUDNET_API_ENABLED=false

# CloudNet REST API URL (default CloudNet REST API port is usually 8080)
CLOUDNET_API_URL=http://localhost:8080/api/v3

# CloudNet API Authentication (if required)
# Uncomment and set if your CloudNet instance requires authentication
# CLOUDNET_API_KEY=your_api_key_here
# CLOUDNET_API_USERNAME=your_username
# CLOUDNET_API_PASSWORD=your_password

# CloudNet API Request Settings
CLOUDNET_API_TIMEOUT=5000
CLOUDNET_API_RETRIES=3
CLOUDNET_API_RETRY_DELAY=1000

# Database Configuration (SQLite)
DB_PATH=./database/cloudnet_panel.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_please_change_in_production
JWT_EXPIRES_IN=24h